{
  "manifest_version": 2,
  "name": "__MSG_extName__",
  "version": "0.0.1",
  "homepage_url": "http://localhost:8080/",
  "description": "Show annotations on top of any html5 web video.",
  "default_locale": "en",
  "permissions": ["activeTab", "storage", "unlimitedStorage"],
  "optional_permissions": ["tabs"],
  "icons": {
    "16": "icons/16.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },
  "background": {
    "scripts": [
      "background/runtime.js",
      "background/polyfills.js",
      "background/styles.js",
      "background/vendor.js",
      "background/main.js"
    ],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": [
        "content-script/runtime.js",
        "content-script/polyfills.js",
        "content-script/styles.js",
        "content-script/vendor.js",
        "content-script/main.js"
      ]
    }
  ],
  "options_ui": {
    "page": "options/index.html",
    "open_in_tab": true
  },
  "browser_action": {
    "default_popup": "browser-action/index.html",
    "default_title": "__MSG_extName__",
    "default_icon": {
      "19": "icons/19.png",
      "38": "icons/38.png"
    }
  }
}
